<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/ui_spacing_16"
    android:paddingTop="@dimen/ui_spacing_8"
    android:paddingEnd="@dimen/ui_spacing_16"
    android:paddingBottom="@dimen/ui_spacing_8">

    <ImageView
        android:id="@+id/area_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ui_spacing_8"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/name"
        style="@style/ui_textview_heading_1_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/ui_spacing_16"
        android:layout_toEndOf="@+id/area_image"
        android:textStyle="bold"
        tools:text="Android" />

</RelativeLayout>